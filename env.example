# System Configuration
SYSTEM_NAME=smart-chat
SYSTEM_VERSION=1.0.0
SYSTEM_DEBUG=true

# Database Configuration (matching system or docker-compose.yml)
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=smartchat
DB_USERNAME=user
DB_PASSWORD=pass

# OpenAI Configuration
OPENAI_API_ENABLED=false
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_API_KEY=api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1024
OPENAI_TEMPERATURE=0.7

# Evolution API Configuration
EVOLUTION_API_ENABLED=false
EVOLUTION_API_URL=https://localhost:3000/
EVOLUTION_API_KEY=api-key

# WhatsApp Configuration
WHATSAPP_ENABLED=false
WHATSAPP_DEFAULT_AGENT_ID=1
WHATSAPP_SYNC_HISTORY_DAYS=30
WHATSAPP_MAX_MESSAGE_LENGTH=4096
WHATSAPP_MEDIA_UPLOAD_PATH=/var/www/html/media

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_PREFIX=smartchat:

# Queue Configuration
QUEUE_DEFAULT_CONNECTION=redis
QUEUE_HIGH_PRIORITY=whatsapp:high
QUEUE_NORMAL_PRIORITY=whatsapp:normal
QUEUE_LOW_PRIORITY=whatsapp:low
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=60

# Cache Configuration
CACHE_TTL_CONTACTS=3600
CACHE_TTL_MESSAGES=1800
CACHE_TTL_INSTANCES=300
CACHE_TTL_QR_CODE=60

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com/webhook.php
WEBHOOK_SIGNATURE_SECRET=your-webhook-signature-secret
WEBHOOK_TIMEOUT=30
WEBHOOK_ENABLED_EVENTS=MESSAGES_UPSERT,MESSAGES_UPDATE,CONTACTS_UPSERT,CONNECTION_UPDATE,PRESENCE_UPDATE,QRCODE_UPDATED,CHATS_UPDATE

